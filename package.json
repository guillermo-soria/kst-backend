{
  "name": "kst-backend-monorepo",
  "version": "1.0.0",
  "description": "KST E-commerce Platform - MedusaJS Backend + Next.js Frontend",
  "private": true,
  "workspaces": ["backend", "frontend", "admin-ui"],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:admin": "npm run dev --workspace=admin-ui",

    "build": "npm run build --workspace=backend && npm run build --workspace=frontend && npm run build --workspace=admin-ui",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:admin": "npm run build --workspace=admin-ui",

    "start": "npm run start --workspace=backend",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run start --workspace=frontend",
    "start:admin": "npm run start --workspace=admin-ui",

    "railway:build": "npm run railway:build --workspace=backend",
    "railway:start": "npm run railway:start --workspace=backend",

    "db:migrate": "npm run db:migrate --workspace=backend",
    "test": "npm run test --workspace=backend && npm run test --workspace=frontend",
    "lint": "npm run lint --workspace=backend && npm run lint --workspace=frontend && npm run lint --workspace=admin-ui || true",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules admin-ui/node_modules",
    "reset": "npm run clean && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/kst-backend.git"
  },
  "keywords": [
    "ecommerce",
    "medusajs",
    "nextjs",
    "typescript",
    "mono-repo"
  ],
  "author": "KST Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2"
  }
}
