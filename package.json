{
  "name": "kst-backend",
  "version": "1.0.0",
  "description": "KST E-commerce Platform - MedusaJS Backend + Next.js Frontend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "cd backend && npm run build",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "cd backend && npm run start",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run start --workspace=frontend",
    "railway:start": "cd backend && npm run railway:start",
    "db:migrate": "cd backend && npm run db:migrate",
    "test": "npm run test --workspace=backend && npm run test --workspace=frontend",
    "lint": "npm run lint --workspace=backend && npm run lint --workspace=frontend",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "reset": "npm run clean && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/kst-backend.git"
  },
  "keywords": [
    "ecommerce",
    "medusajs",
    "nextjs",
    "typescript",
    "mono-repo"
  ],
  "author": "KST Team",
  "license": "MIT",
  "dependencies": {
    "@medusajs/cache-redis": "^2.10.3",
    "@medusajs/event-bus-redis": "^2.10.3",
    "@medusajs/workflow-engine-redis": "^2.10.3",
    "ioredis": "^5.8.0"
  }
}
